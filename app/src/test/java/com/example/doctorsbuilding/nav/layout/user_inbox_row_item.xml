<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/my_padding"
    android:background="@drawable/layout_shadow"
    android:layout_marginRight="@dimen/my_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userInbox_drName"
        android:layout_width="wrap_content"
        android:textColor="#323232"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/userInbox_date"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/userInbox_drName"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="1390/05/06 12:31 AM" />

    <TextView
        android:id="@+id/userInbox_message"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/userInbox_drName"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/userInbox_btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/userInbox_message"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_delete_button"
        android:text="حذف پیام"
        android:textColor="@android:color/white" />
</RelativeLayout>