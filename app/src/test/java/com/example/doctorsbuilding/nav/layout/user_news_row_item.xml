<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_shadow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userNews_rowItem_drName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userNews_rowItem_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/userNews_rowItem_drName"
        android:layout_below="@id/userNews_rowItem_drName"
        android:layout_marginTop="10dp"
        android:textColor="#535353"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/userNews_rowItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/userNews_rowItem_news"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />
</RelativeLayout>