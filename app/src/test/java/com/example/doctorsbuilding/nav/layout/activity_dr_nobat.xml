<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/colorFragment"
    android:descendantFocusability="beforeDescendants"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:id="@+id/group_drNobatActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nobat_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_text_view"
                android:clickable="true"
                android:hint="@string/nobat_date"
                android:padding="@dimen/my_padding" />

            <LinearLayout
                android:id="@+id/nobat_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/my_padding"
                android:paddingTop="@dimen/my_padding"
                android:weightSum="2">

                <TextView
                    android:id="@+id/nobat_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/my_text_view"
                    android:clickable="true"
                    android:hint="@string/nobat_start_time"
                    android:padding="@dimen/my_padding" />

                <TextView
                    android:id="@+id/nobat_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_text_view"
                    android:clickable="true"
                    android:hint="@string/nobat_end_time"
                    android:padding="@dimen/my_padding" />
            </LinearLayout>

            <EditText
                android:id="@+id/nobat_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_edit_text"
                android:hint="@string/nobat_capacity"
                android:inputType="number|textAutoComplete|none"
                android:maxLength="2"
                android:maxLines="1"
                android:padding="@dimen/my_padding"
                android:textSize="@dimen/my_text_size" />

            <Spinner
                android:id="@+id/nobat_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_spinner"></Spinner>


            <Button
                android:id="@+id/dr_btnNobatInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:background="@drawable/my_button"
                android:text="@string/nobat_btn_insert"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/nobat_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:layout_weight="1"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:padding="@dimen/my_padding">

            </ListView>

        </LinearLayout>

    </LinearLayout>


</ScrollView>