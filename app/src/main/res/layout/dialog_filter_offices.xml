<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:text="جستجو براساس"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorAccent"/>

        <Spinner
            android:id="@+id/filter_office_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_spinner"></Spinner>

        <Spinner
            android:id="@+id/filter_office_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_spinner"></Spinner>

        <Spinner
            android:id="@+id/filter_office_expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_spinner"></Spinner>

        <Spinner
            android:id="@+id/filter_office_subExpert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_spinner"></Spinner>

        <EditText
            android:id="@+id/filter_office_name"
            android:hint="نام"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_edit_text"
            android:padding="8dp" />

        <EditText
            android:id="@+id/filter_office_lastname"
            android:hint="نام خانوادگی"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_edit_text"
            android:padding="8dp" />

        <Button
            android:id="@+id/filter_office_btn_apply"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_button"
            android:text="اعمال فیلتر"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>