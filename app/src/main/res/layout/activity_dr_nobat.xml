<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <include layout="@layout/my_toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/group_drNobatActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.and(roid.com/tools"
                    android:id="@+id/assistant_weakLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal"
                    tools:context=".Dr.Nobat.DrNobatActivity">

                    <CheckBox
                        android:id="@+id/doctor_chx0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="ش"
                        android:textColor="@drawable/text_color"
                        app:layout_marginLeftPercent="2%"
                        app:layout_widthPercent="10%" />

                    <CheckBox
                        android:id="@+id/doctor_chx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/doctor_chx0"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="ی"
                        android:textColor="@drawable/text_color"
                        app:layout_marginLeftPercent="2%"
                        app:layout_marginRightPercent="3%"
                        app:layout_widthPercent="10%" />

                    <CheckBox
                        android:id="@+id/doctor_chx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/doctor_chx1"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="د"
                        android:textColor="@drawable/text_color"
                        app:layout_marginLeftPercent="2%"
                        app:layout_marginRightPercent="3%"
                        app:layout_widthPercent="10%" />

                    <CheckBox
                        android:id="@+id/doctor_chx3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/doctor_chx2"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="س"
                        android:textColor="@drawable/text_color"
                        app:layout_marginLeftPercent="2%"
                        app:layout_marginRightPercent="3%"
                        app:layout_widthPercent="10%" />

                    <CheckBox
                        android:id="@+id/doctor_chx4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/doctor_chx3"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="چ"
                        android:textColor="@drawable/text_color"
                        app:layout_marginLeftPercent="2%"
                        app:layout_marginRightPercent="3%"
                        app:layout_widthPercent="10%" />

                    <CheckBox
                        android:id="@+id/doctor_chx5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/doctor_chx4"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="پ"
                        android:textColor="@drawable/text_color"
                        app:layout_marginLeftPercent="2%"
                        app:layout_marginRightPercent="3%"
                        app:layout_widthPercent="10%" />

                    <CheckBox
                        android:id="@+id/doctor_chx6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/doctor_chx5"
                        android:background="@drawable/my_check_box"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="ج"
                        android:textColor="@drawable/text_color"
                        app:layout_marginRightPercent="3%"
                        app:layout_widthPercent="10%" />

                </android.support.percent.PercentRelativeLayout>


                <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    tools:context=".Dr.Nobat.DrNobatActivity">

                    <TextView
                        android:id="@+id/nobat_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_text_view"
                        android:clickable="true"
                        android:hint="از تاریخ ..."
                        android:padding="8dp"
                        app:layout_marginLeftPercent="1%"
                        app:layout_widthPercent="49%" />

                    <TextView
                        android:id="@+id/nobat_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/my_text_view"
                        android:clickable="true"
                        android:hint="تا تاریخ ..."
                        android:padding="8dp"
                        app:layout_marginRightPercent="1%"
                        app:layout_widthPercent="49%" />


                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/nobat_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    tools:context=".Dr.Nobat.DrNobatActivity">

                    <TextView
                        android:id="@+id/nobat_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_text_view"
                        android:clickable="true"
                        android:hint="از ساعت ..."
                        android:padding="8dp"
                        app:layout_marginLeftPercent="1%"
                        app:layout_widthPercent="49%" />

                    <TextView
                        android:id="@+id/nobat_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/my_text_view"
                        android:clickable="true"
                        android:hint="تا ساعت ..."
                        android:padding="8dp"
                        app:layout_marginRightPercent="1%"
                        app:layout_widthPercent="49%" />

                </android.support.percent.PercentRelativeLayout>

                <EditText
                    android:id="@+id/nobat_capacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/my_edit_text"
                    android:digits="0123456789"
                    android:hint="@string/nobat_capacity"
                    android:inputType="phone|textAutoComplete|none"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="14sp" />


                <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    tools:context=".Dr.Nobat.DrNobatActivity">

                    <Button
                        android:id="@+id/dr_btnNobatInsert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_button"
                        android:text="ثبت نوبت"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_marginLeftPercent="1%"
                        app:layout_widthPercent="49%" />

                    <Button
                        android:id="@+id/dr_btnNobatShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/my_add_button"
                        android:text="مشاهده نوبت"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_marginRightPercent="1%"
                        app:layout_widthPercent="49%" />


                </android.support.percent.PercentRelativeLayout>

                <TextView
                    android:id="@+id/nobat_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="لطفا شکیبا باشید ..."
                    android:visibility="gone" />

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.doctorsbuilding.nav.Util.NonScrollListView
                        android:id="@+id/nobat_listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="8dp"
                        android:padding="@dimen/my_padding">

                    </com.example.doctorsbuilding.nav.Util.NonScrollListView>

                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>