<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:padding="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_spinnerItem_patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:id="@+id/message_spinnerItem_chbox"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/message_spinnerItem_patientName"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="true" />

    <TextView
        android:id="@+id/message_spinnerItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_spinnerItem_chbox"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/message_spinnerItem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_spinnerItem_chbox"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/message_spinnerItem_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/message_spinnerItem_time"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorDivider" />

</RelativeLayout>