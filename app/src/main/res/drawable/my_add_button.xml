<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0c8066" />
            <stroke android:width="2dp" android:color="#006c54" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#0c8066" />
            <stroke android:width="2dp" android:color="#0c8066" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#006c54" android:startColor="#0c8066" />
            <stroke android:width="1dp" android:color="#0c8066" />
            <corners android:radius="2dp" />
            <size android:height="20dp" />
        </shape>
    </item>
</selector>